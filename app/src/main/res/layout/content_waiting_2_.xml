<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cs407.chromecastcribbage.Waiting_2_Activity"
    android:background="@drawable/oak1"
    tools:showIn="@layout/activity_waiting_2_">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="50dp"
        android:text="Setting Up Game" />

    <TextView
        android:id="@+id/playerOne"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:text="Player 1:" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/playerTwo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:text="Player 2: (Waiting for Player)" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/playerThree"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:text="Player 3: (Waiting for Player)" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/playerFour"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:text="Player 4: (Waiting for Player)" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startGame"
        android:text="Start Game" />
    <!--
        android:visibility="invisible"
-->

</LinearLayout>
