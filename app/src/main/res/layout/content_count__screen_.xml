<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oak1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cs407.chromecastcribbage.Count_Screen_Activity"
    tools:showIn="@layout/activity_count__screen_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.83"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/turnText"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:background="@drawable/cherry"
            android:gravity="center_horizontal"
            android:text="Your Hand Count"
            android:textColor="@color/icons"
            android:textSize="24sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/countString1"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textColor="#212121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/countString2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#212121"
            android:textSize="20sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:background="@drawable/cherry"
            android:orientation="vertical">

            <TextView
                android:id="@+id/totalScore"
                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:text="Total"
                android:textColor="@color/icons"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/totalScore1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/icons"
                android:textSize="40sp" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cards"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/cardOneIV"
                android:layout_width="110dp"
                android:layout_height="150dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/cardTwoIV"
                android:layout_width="110dp"
                android:layout_height="150dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/cardThreeIV"
                android:layout_width="110dp"
                android:layout_height="150dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/cardFourIV"
                android:layout_width="110dp"
                android:layout_height="150dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/turnCardIV"
                android:layout_width="110dp"
                android:layout_height="150dp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/confirmHandButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/cherry"
            android:gravity="center"
            android:onClick="confirmHand"
            android:text="Confirm"
            android:visibility="invisible"
            android:layout_alignBottom="@id/cards"
            android:textColor="@color/icons"
            android:textSize="36dp" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>
