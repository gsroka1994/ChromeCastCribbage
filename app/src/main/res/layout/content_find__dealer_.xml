<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oak1"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cs407.chromecastcribbage.Find_Dealer_Activity"
    tools:showIn="@layout/activity_find__dealer_">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Select a Card.  Player with the lowest card is the dealer and has the first Crib."
        android:textColor="#212121"
        android:textSize="30dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button2"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button1"
            android:layout_toEndOf="@+id/button1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3" />

        <Button
            android:id="@+id/button5"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button4"
            android:layout_toEndOf="@+id/button4" />

        <Button
            android:id="@+id/button13"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5" />
        <Button
            android:id="@+id/button6"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button7"
            android:layout_toEndOf="@+id/button7" />
        <Button
            android:id="@+id/button7"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_below="@+id/button1"
            android:layout_alignLeft="@+id/button1"
            android:layout_alignStart="@+id/button1" />
        <Button
            android:id="@+id/button8"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_below="@+id/button2"
            android:layout_toRightOf="@+id/button7"
            android:layout_toEndOf="@+id/button7" />
        <Button
            android:id="@+id/button9"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_below="@+id/button3"
            android:layout_toRightOf="@+id/button8"
            android:layout_toEndOf="@+id/button8" />
        <Button
            android:id="@+id/button10"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_below="@+id/button4"
            android:layout_toRightOf="@+id/button9"
            android:layout_toEndOf="@+id/button9" />
        <Button
            android:id="@+id/button11"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_below="@+id/button5"
            android:layout_toRightOf="@+id/button4"
            android:layout_toEndOf="@+id/button4" />
        <Button
            android:id="@+id/button12"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:text="Card"
            android:onClick="selectCard"
            android:layout_below="@+id/button6"
            android:layout_toRightOf="@+id/button11"
            android:layout_toEndOf="@+id/button11" />


    </RelativeLayout>


</LinearLayout>
